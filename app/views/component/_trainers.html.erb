<% if @trainers.size > Settings.size_more %>
  <% @trainers.limit(Settings.size_more).each do |trainer| %>
    <li><%= link_to image_tag(trainer.picture, class: "img img-mini-avatar"), trainer %></li>
  <% end %>
  <li>
    <div class="box-tools pull-right" id="myBtn">
      <span class="label label-primary"><%= @trainers.size %></span>
    </div>
  </li>
<% else %>
  <% @trainers.each do |trainer| %>
    <li><%= link_to image_tag(trainer.picture, class: "img img-mini-avatar"), trainer %></li>
  <% end %>
<% end %>
