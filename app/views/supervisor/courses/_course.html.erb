<tr>
  <td><%= image_tag course.picture, class: "img-circle" %></td>
  <td>
    <%= link_to course.name, supervisor_course_path(course) %>
  </td>
  <td>
    <%= course.created_at %>
  </td>
  <td>
    <% if current_user.admin? || current_user.trainer? %>
      <%= link_to t(".update"), edit_supervisor_course_path(course) %> |
      <%= link_to t("courses.index.delete"), supervisor_course_path(course),
        method: :delete, data: {confirm: t("courses.index.confirm_delete")} %>
    <% end %>
  </td>
</tr>
