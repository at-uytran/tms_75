<header class="main-header">
  <%= link_to root_path, class: "logo" do %>
    <%= content_tag(:span, t(".framgia"), class: "logo-lg") %>
  <% end %>
  <nav class="navbar navbar-static-top">
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_user.picture, class: "user-image" %>
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag current_user.picture, class: "img-circle" %>
              <p>
                <%= current_user.name %>
                <small><%= current_user.roles %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to t(".profile"), current_user, class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to t(".log_out"), logout_path, method: :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
        <li>
          <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
        </li>
      </ul>
    </div>
  </nav>
</header>
