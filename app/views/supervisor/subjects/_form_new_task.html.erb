<%= form_for([:supervisor, @new_task]) do |f| %>

  <%= hidden_field_tag :subject_id, @subject.id %>

  <%= f.hidden_field :subject_id, value: @subject.id %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area  :description, class: "form-control", rows: Settings.area_size %>

  <center><%= f.submit t(".init"), class: "btn btn-primary button-subject" %></center>
<% end %>
