var role = '<%= @user.roles %>';
console.log(role);
if(role == 'trainer' || role == 'admin'){
  $('#edit_user_course_<%= @user_course_id %>').parent().html('<%= j(render(partial: 'supervisor/courses/button/add_trainer', locals: {course: @user_course.course, trainer: @user_course.user})) %>');
}
else{
  $('#edit_user_course_<%= @user_course_id %>').parent().html('<%= j(render(partial: 'supervisor/courses/button/add_trainee', locals: {course: @user_course.course, trainee: @user_course.user})) %>');
}
showAlert(I18n.t("alert.removed"));

function showAlert(message){
  $('#alert').html(message);
  $('#alert').show().fadeIn().delay(3000).fadeOut();
}
