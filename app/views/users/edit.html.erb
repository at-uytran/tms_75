<% provide :title,t(".title")  %>
<% provide :button_text, t(".btn_submit") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><center><%= t".str" %></center></h1>
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :school %>
      <%= f.text_field :school, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".title"), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t".img" %></a>
    </div>
  </div>
</div>
