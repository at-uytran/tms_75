<div class="mail">
  <h3><%= t".profile" %></h3>
  <div class="agileinfo_mail_grids">
    <div class="col-md-4 agileinfo_mail_grid_left">
      <ul>
        <li><%= t".name" %><span><%= @user.name %></span></li>
      </ul>
      <ul>
        <li><%= t".email" %><span><%= @user.email %></span></li>
      </ul>
      <ul>
        <li><%= t".address" %><span><%= @user.address %></span></li>
      </ul>
      <ul>
        <li><%= t".school" %><span><%= @user.school %></span></li>
      </ul>
      <ul>
        <li><span><%= link_to t(".edit"), edit_user_path(@user) %></span></li>
      </ul>
    </div>
    <div class="col-md-8 agileinfo_mail_grid_right">
      <div class="w3ls_w3l_banner_nav_right_grid ">
        <div class="hover14 column">
          <% @courses.each do |x| %>
          <div class="agile_top_brand_left_grid ">
            <div class="agile_top_brand_left_grid1">
              <figure>
                <div class="snipcart-item block">
                <div class="snipcart-details">
                  <h1><%= link_to x.name, [@course, :course] %></h1>
                </div>
                  <div class="snipcart-thumb"><center><%= x.description %></center>
                </div>
                </div>
              </figure>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"> </div>
  </div>
</div>
