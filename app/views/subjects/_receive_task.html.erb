<%= form_for(current_user.user_tasks.build,
  html: {id: "new_user_task_#{task_id}"}, remote: true) do |f| %>
  <%= hidden_field_tag :task_id, task_id %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :status, Settings.status_doing %>

  <%= f.submit t(".init"), class: "btn btn-primary button-init" %>
<% end %>
