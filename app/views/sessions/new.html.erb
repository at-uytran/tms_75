<% provide :title, t(".title") %>
<div class="w3_login">
  <h3><center><%= t".title" %></center></h3>
  <div class="col-md-6 col-md-offset-3">
  <div class="form-horizontal">
    <%= form_for(:session, class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-2" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :remember_me, class: "control-label" do %>
          <%= f.check_box :remember_me %>
          <span><%= t".str2" %></span>
        <% end %>
      </div>

      <%= f.submit t(".title"), class: "btn btn-success" %>
    <% end %>
  </div>
  </div>
</div>
